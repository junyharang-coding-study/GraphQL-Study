type EquipmentId {
    equipmentId: ID!
}

type EquipmentResponseDto {
    equipmentId: ID!,
    usedBy: String!,
    count: Int!,
    newOrUsed: String!
}

input EquipmentSearchRequestDto {
    equipmentId: ID,
    usedBy: String,
    newOrUsed: String
}

input CreateEquipmentRequestDto {
    equipmentId: ID!,
    usedBy: String!,
    count: Int!,
    newOrUsed: String!
}

enum Sex {
    male,
    female
}

enum BloodType {
    A,
    B,
    AB,
    O
}

enum Role {
    developer,
    designer,
    planner
}

type Query {
    # 함수 이름은 Controller @QueryMapping이 사용된 Method 이름과 동일해야 함.
    getEquipmentList(
        equipmentId: String,
        usedBy: String,
        newOrUsed: String,
        page: Int,
        size: Int): [EquipmentResponseDto!]!,

    getEquipment(equipmentId: String!): EquipmentResponseDto!
}

type Mutation {
    save(input: CreateEquipmentRequestDto): EquipmentId!
}